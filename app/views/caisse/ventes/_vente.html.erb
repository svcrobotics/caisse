<div class="p-4 border rounded shadow-sm mb-2 flex justify-between items-center">
  <div>
    <p><strong>Vente #<%= vente.id %></strong></p>
    <p>Date : <%= vente.created_at.strftime("%d/%m/%Y %H:%M") %></p>
    <p>Total : <%= number_to_currency(vente.total) %></p>
    <p>Mode de paiement : <%= vente.mode_paiement %></p>
  </div>

  <div>
    <%= link_to "Voir", vente, class: "px-3 py-2 bg-green-100 rounded" %>
    <%= link_to "Modifier", edit_vente_path(vente), class: "px-3 py-2 bg-blue-100 rounded" %>
  </div>
</div>
